<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="MyHeadText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/headText</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="MyDesc">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/descText</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="MyButton">
        <item name="android:buttonStyle">@android:style/Widget.Material.Light.Button</item>
    </style>

    <style name="MyImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">fitStart</item>
    </style>

</resources>
